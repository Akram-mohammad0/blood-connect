generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Donor {
  id           Int      @id @default(autoincrement())
  name         String
  bloodType    String
  gender       String
  location     String        // Keep this for city/state name
  latitude     Float         // ✅ New: for Google Maps & distance
  longitude    Float         // ✅ New: for Google Maps & distance
  age          Int
  weight       Int
  contact      String
  email        String?
  healthIssues String?
  notes        String?
  lastDonation DateTime?
  createdAt    DateTime @default(now())
}
